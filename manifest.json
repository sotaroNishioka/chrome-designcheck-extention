{
  "manifest_version": 3,
  "name": "Design Checker",
  "version": "1.0.0",
  "description": "A Chrome extension for checking design consistency",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_popup_width": 400,
    "default_popup_height": 1200
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.ts"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}